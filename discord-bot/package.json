{
  "name": "discord-bot-ts",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "prisma:generate": "prisma generate",
    "dev:db:drop": "bunx prisma migrate reset --force",
    "dev:db:push": "bunx prisma db push",
    "dev:setup": "bun run dev:db:drop && bun run dev:db:push",
    "test:local": "env-cmd -f .env.local bun test",
    "test:db:drop": "env-cmd -f .env.test bunx prisma migrate reset --force",
    "test:db:push": "env-cmd -f .env.test bunx prisma db push",
    "test:setup": "bun run test:db:drop && bun run test:db:push"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "axios": "^1.8.4",
    "dayjs": "^1.11.13",
    "discord.js": "^14.18.0",
    "dotenv": "^16.5.0",
    "inversify": "^7.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "env-cmd": "^10.1.0",
    "prisma": "^6.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
